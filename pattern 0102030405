// Code your testbench here
// or browse Examples
class example;
  rand int arr[10];
  
  constraint c2 { foreach (arr[i])
    if(i%2==0)
      arr[i]==0;
    else
      arr[i]==(i+1)/2;
  				}
endclass

module answer;
  example ex;
  initial begin
    ex=new();
    ex.randomize();
    $display("arr =%p",ex.arr);
  end
  
endmodule
